<h1>Longest word game</h1>
<h2><%= @grid
@grid.join(" ") %></h2>

<% start_time = Time.now %>
<h3>What's your best shot?</h3>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" value="<%= @grid.join %>" name="grid">
  <input type="hidden" value="<%= start_time %>" name="start_time">
  <input type="text" id="result" name="attempt" placeholder="Type a word">
  <input type="submit" value="Go!">
</form>